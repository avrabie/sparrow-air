<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="04" author="execodex">
        <createTable tableName="flights">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="airline_icao_code" type="VARCHAR(3)">
                <constraints nullable="false" foreignKeyName="fk_flight_airline" references="airlines(icao_code)"/>
            </column>
            <column name="flight_number" type="VARCHAR(10)">
                <constraints nullable="false"/>
            </column>
            <column name="departure_airport_icao" type="VARCHAR(4)">
                <constraints nullable="false" foreignKeyName="fk_flight_departure_airport" references="airports(icao_code)"/>
            </column>
            <column name="arrival_airport_icao" type="VARCHAR(4)">
                <constraints nullable="false" foreignKeyName="fk_flight_arrival_airport" references="airports(icao_code)"/>
            </column>
            <column name="scheduled_departure" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="aircraft_type_icao" type="VARCHAR(4)">
                <constraints nullable="false" foreignKeyName="fk_flight_aircraft_type" references="aircraft_types(icao_code)"/>
            </column>
            <column name="status" type="VARCHAR(20)"/>
        </createTable>
    </changeSet>

</databaseChangeLog>